<!DOCTYPE html>
<html>
<head>
	<title>Kite CS Angular Starter</title>
	<meta http-equiv="x-ua-compatible" content="ie=edge">
	<meta charset='utf-8'>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <link rel="manifest" href="manifest.json">
  <% if (htmlWebpackPlugin.options.cordova) { %>
    <script src="cordova.js"></script>
  <% } %>
  <style>
    body{margin:0px;}
    .page-loader-logo{width:160px;height:160px;}  
    .page-loader{
        background: #fff;
        display: flex;
        align-items: center; 
        justify-content: center;
        z-index:9;
        position:absolute;
        width:100%;
        height:100%;
        top:0px;
    }
  </style>
</head>
<body>
	<ion-app>
    <div class="page-loader">
      <img class="page-loader-logo" src="app/assets/images/burger.png">
    </div>      
  </ion-app>
  <% if (!htmlWebpackPlugin.options.prod) { %>
    <%= '<' %>script src="/polyfill.dll.js"<%= '>' %><%= '<' %>/script<%= '>' %>
    <%= '<' %>script src="/vendor.dll.js"<%= '>' %><%= '<' %>/script<%= '>' %>
  <% } %>
	<script src="index.js"></script>
</body>
</html>
